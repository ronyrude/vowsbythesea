<!-- Minimal styles to support tooltip + calendar + hints (scoped to form only) -->
<style>
  #contact-form select, #contact-form input, #contact-form textarea { background:#fff; }
  .hint { margin-top: 6px; font-size: 0.92rem; color: #555; }
  .field-with-help { position: relative; }
  .help-btn {
    margin-left: 8px; width: 22px; height: 22px; border-radius: 50%;
    border: 1px solid #ddd; background: #fff; font-weight: 700; cursor: pointer; line-height: 1;
  }
  .help-btn:focus { outline: 2px solid var(--primary, #f28e1c); }
  .help-pop {
    position: absolute; left: 0; right: 0; top: 100%; margin-top: 6px;
    background: #fff; border: 1px solid #ddd; border-radius: 8px; padding: 10px; font-size: 0.95rem;
    box-shadow: 0 8px 18px rgba(0,0,0,0.08); display: none; z-index: 2;
  }
  .field-with-help.show-help .help-pop { display: block; }

  .multi-date-picker { border: 1px solid #ddd; border-radius: 10px; padding: 10px; background:#fff; margin-top: 8px; }
  .mdp-header { display: flex; align-items: center; justify-content: center; gap: 8px; margin-bottom: 8px; }
  .mdp-title { font-weight: 700; min-width: 180px; text-align: center; }
  .mdp-nav { border: 1px solid #ddd; background:#fff; border-radius: 6px; padding: 4px 8px; cursor: pointer; }
  .mdp-nav:focus { outline: 2px solid var(--primary, #f28e1c); }
  .mdp-grid { user-select: none; }
  .mdp-dow { display: grid; grid-template-columns: repeat(7, 1fr); text-align: center; font-weight: 700; margin-bottom: 4px; }
  .mdp-dow span { padding: 4px 0; }
  .mdp-days { display: grid; grid-template-columns: repeat(7, 1fr); gap: 4px; }
  .mdp-day { border: 1px solid #eee; border-radius: 8px; padding: 8px 0; text-align:center; cursor: pointer; background:#fff; }
  .mdp-day.out { opacity: 0.35; cursor: default; }
  .mdp-day.disabled { opacity: 0.4; pointer-events: none; }
  .mdp-day.selected { background: rgba(242,142,28,0.15); border-color: rgba(242,142,28,0.7); font-weight: 700; }
  .mdp-selected { margin-top: 8px; font-size: 0.95rem; }
  .mdp-chip { display: inline-block; border: 1px solid #ddd; border-radius: 999px; padding: 2px 8px; margin: 3px; background:#fff; }
</style>

<script>
  // --- Tooltip / description for dates ---
  (function(){
    const field = document.querySelector('.field-with-help');
    if(!field) return;
    const btn = field.querySelector('.help-btn');
    btn.addEventListener('click', ()=>{
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      field.classList.toggle('show-help', !expanded);
    });
    btn.addEventListener('blur', ()=> {
      setTimeout(()=> {
        btn.setAttribute('aria-expanded','false');
        field.classList.remove('show-help');
      }, 150);
    });
    field.addEventListener('mouseenter', ()=> {
      btn.setAttribute('aria-expanded','true');
      field.classList.add('show-help');
    });
    field.addEventListener('mouseleave', ()=> {
      btn.setAttribute('aria-expanded','false');
      field.classList.remove('show-help');
    });
  })();

  // --- STATIC options for Packages and Beaches (easy to edit) ---
  (function(){
    // Packages (static)
    const pkgSel = document.getElementById('package');
    if (pkgSel) {
      const packages = [
        {value:'Sweet & Simple Package', label:'Sweet & Simple Package - $395.00'},
        {value:'Just The Two of Us Package', label:'Just The Two of Us Package - $495.00'},
        {value:'I Love You Package', label:'I Love You Package - $595.00'},
        {value:'Bamboo & Stars Package', label:'Bamboo & Stars Package - $595.00'},
        {value:'Stars of Love I Package', label:'Stars of Love I Package - $695.00'},
        {value:'Stars of Love II Package', label:'Stars of Love II Package - $895.00'},
        {value:'Tiki Parasol Package', label:'Tiki Parasol Package - $795.00'},
        {value:'A Little More Package', label:'A Little More Package - Starting at $849.00'},
        {value:'Something Blue Stars Package', label:'Something Blue Stars Package - $1,499.00 + tax'},
        {value:'Bamboo Love II Package', label:'Bamboo Love II Package - $2,999.00'},
        {value:'Tropical Bliss Package', label:'Tropical Bliss Package - $4,999 + tax'}
      ];
      pkgSel.innerHTML = '<option value="">Select a package...</option>';
      packages.forEach(pkg => {
        const opt = document.createElement('option');
        opt.value = pkg.value;
        opt.textContent = pkg.label;
        pkgSel.appendChild(opt);
      });
    }

    // Beaches (static)
    const beachSel = document.getElementById('beach');
    if (beachSel) {
      const beaches = [
        'Clearwater Beach','Sand Key Park','Honeymoon Island','Caladesi Island State Park','Belleair Beach',
        'Indian Rocks Beach','Indian Shores','Redington Beach','Madeira Beach','Treasure Island','Sunset Beach',
        'Pass-a-Grille Beach','St Pete Beach','Fort De Soto Park','Tampa Beach','Sarasota Beach','Anna Maria Island'
      ];
      beachSel.innerHTML = '';
      beaches.forEach(name => {
        const opt = document.createElement('option');
        opt.value = name; opt.textContent = name;
        beachSel.appendChild(opt);
      });
      const note = document.getElementById('beach-note');
      if (note) note.textContent = 'Tip: You can select multiple beaches. On mobile, tap to add; on desktop, use Ctrl/Cmd-click.';
    }
  })();

  // --- Multi-date picker (dependency-free) + open only when dropdown clicked ---
  (function(){
    const daysHost = document.getElementById('mdp-days');
    const titleEl = document.querySelector('.mdp-title');
    const hidden = document.getElementById('preferred-dates');
    const selBox = document.querySelector('.mdp-selected');
    const wrap = document.getElementById('calendar-wrap');
    const trigger = document.getElementById('date-range');

    if(!daysHost || !titleEl || !hidden || !selBox || !wrap || !trigger) return;

    const openCalendar = ()=>{
      wrap.hidden = false;
      const firstDayBtn = daysHost.querySelector('.mdp-day');
      if (firstDayBtn) firstDayBtn.focus({preventScroll:true});
    };
    const closeCalendar = ()=>{ wrap.hidden = true; };

    trigger.addEventListener('mousedown', (e)=>{ e.preventDefault(); openCalendar(); });
    trigger.addEventListener('keydown', (e)=>{
      if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openCalendar(); }
      if (e.key === 'Escape') { closeCalendar(); }
    });
    document.addEventListener('click', (e)=>{
      if (!wrap.hidden && !wrap.contains(e.target) && e.target !== trigger) {
        closeCalendar();
      }
    });

    const today = new Date();
    let view = new Date(today.getFullYear(), today.getMonth(), 1);
    const selected = new Set();

    function fmtISO(d){
      const y = d.getFullYear();
      const m = String(d.getMonth()+1).padStart(2,'0');
      const day = String(d.getDate()).padStart(2,'0');
      return `${y}-${m}-${day}`;
    }
    function daysInMonth(y,m){ return new Date(y, m+1, 0).getDate(); }
    function renderTitle(){
      titleEl.textContent = view.toLocaleString(undefined, { month:'long', year:'numeric' });
    }

    function renderDays(){
      daysHost.innerHTML = '';
      renderTitle();
      const y = view.getFullYear(), m = view.getMonth();
      const firstDow = new Date(y, m, 1).getDay();
      const numDays = daysInMonth(y, m);

      for(let i=0;i<firstDow;i++){
        const span = document.createElement('span');
        span.className = 'mdp-day out';
        span.setAttribute('aria-hidden','true');
        daysHost.appendChild(span);
      }

      for(let d=1; d<=numDays; d++){
        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'mdp-day';
        btn.textContent = d;

        const date = new Date(y, m, d);
        const iso = fmtISO(date);
        btn.setAttribute('aria-label', `Select ${iso}`);

        if (selected.has(iso)) btn.classList.add('selected');

        btn.addEventListener('click', ()=>{
          if (selected.has(iso)) selected.delete(iso);
          else selected.add(iso);
          btn.classList.toggle('selected');
          updateHidden();
          renderSelectedChips();
        });

        daysHost.appendChild(btn);
      }

      updateHidden();
      renderSelectedChips();
    }

    function updateHidden(){
      const arr = Array.from(selected).sort();
      hidden.value = arr.join(',');
    }

    function renderSelectedChips(){
      const arr = Array.from(selected).sort();
      if (!arr.length){
        selBox.textContent = 'No dates selected.';
        return;
      }
      selBox.innerHTML = 'Selected: ';
      arr.forEach(iso=>{
        const chip = document.createElement('span');
        chip.className = 'mdp-chip';
        chip.textContent = iso;
        chip.title = 'Click to remove';
        chip.tabIndex = 0;
        chip.addEventListener('click', ()=>{
          selected.delete(iso);
          renderDays();
        });
        chip.addEventListener('keydown', (e)=>{
          if(e.key==='Enter' || e.key===' ') { e.preventDefault(); selected.delete(iso); renderDays(); }
        });
        selBox.appendChild(chip);
      });
    }

    document.querySelectorAll('.mdp-nav').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const dir = parseInt(btn.dataset.dir,10);
        view.setMonth(view.getMonth() + dir);
        renderDays();
      });
    });

    renderDays();
  })();

  // --- AJAX submit to FormSubmit + validation for dates & beaches ---
  (function(){
    const form = document.getElementById('contact-form');
    const messageDiv = document.getElementById('form-message');
    const datesHidden = document.getElementById('preferred-dates');
    const beachSel = document.getElementById('beach');

    if(!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      messageDiv.textContent = '';
      messageDiv.style.color = 'green';

      if (!datesHidden.value) {
        messageDiv.style.color = 'red';
        messageDiv.textContent = 'Please choose at least one preferred date.';
        return;
      }
      if (beachSel && !Array.from(beachSel.selectedOptions).length) {
        messageDiv.style.color = 'red';
        messageDiv.textContent = 'Please select at least one preferred beach location.';
        return;
      }

      if(!form.checkValidity()){
        messageDiv.style.color = 'red';
        messageDiv.textContent = 'Please fill out all required fields correctly.';
        form.reportValidity();
        return;
      }

      const actionUrl = form.getAttribute('action') || '';
      if(!/^https:\/\/formsubmit\.co\//i.test(actionUrl)){
        form.submit();
        return;
      }

      try {
        const fd = new FormData(form);
        const res = await fetch(actionUrl, {
          method: 'POST',
          headers: { 'Accept': 'application/json' },
          body: fd
        });

        if (res.ok) {
          messageDiv.style.color = 'green';
          messageDiv.textContent = 'Thank you! Your message has been sent.';
          form.reset();
          const selBox = document.querySelector('.mdp-selected');
          if (selBox) selBox.textContent = 'No dates selected.';
        } else {
          const data = await res.json().catch(()=> ({}));
          messageDiv.style.color = 'red';
          messageDiv.textContent = data?.message || 'Something went wrong. Please try again later.';
        }
      } catch(err){
        messageDiv.style.color = 'red';
        messageDiv.textContent = 'Network error. Please try again.';
      }
    });
  })();

  // --- Obfuscated phone number rendering (prevents simple scraping & keeps it out of JSON-LD) ---
  (function(){
    // Store number reversed in data attributes, then flip it and insert with non-breaking hyphens.
    const el = document.getElementById('secure-phone');
    if (!el) return;
    const p1 = el.getAttribute('data-p1'); // "0727"
    const p2 = el.getAttribute('data-p2'); // "213"
    const p3 = el.getAttribute('data-p3'); // "0960"
    const norm = (s)=> s.split('').reverse().join('');
    const pretty = `+1\u00A0${norm(p1)}\u2011${norm(p2)}\u2011${norm(p3)}`; // +1 727‑312‑6900
    el.textContent = pretty;
  })();
</script>

</main>
</body>
</html>
