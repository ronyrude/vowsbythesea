<!-- Scripts -->
<script>
  // Mobile nav + dropdown toggle
  (function(){
    const nav = document.querySelector('nav');
    const toggle = document.querySelector('.nav-toggle');
    const locBtn = document.getElementById('loc-menu-btn');
    const dropdown = locBtn ? locBtn.parentElement : null;

    if(toggle){
      toggle.addEventListener('click', ()=>{
        const isOpen = nav.classList.toggle('open');
        toggle.setAttribute('aria-expanded', String(isOpen));
      });
    }
    if(locBtn && dropdown){
      locBtn.addEventListener('click', (e)=>{
        if (window.matchMedia('(max-width:820px)').matches){
          e.preventDefault();
          const isOpen = dropdown.classList.toggle('open');
          locBtn.setAttribute('aria-expanded', String(isOpen));
        }
      });
    }
    document.getElementById('site-nav-links')?.addEventListener('click', (e)=>{
      if(e.target.tagName === 'A' && nav.classList.contains('open')){
        nav.classList.remove('open');
        toggle?.setAttribute('aria-expanded','false');
        dropdown?.classList.remove('open');
        locBtn?.setAttribute('aria-expanded','false');
      }
    });
  })();

  // Populate packages & beaches (fills the hidden #beach select)
  (function(){
    const pkgSel=document.getElementById('package');
    if(pkgSel){
      const packages=[
        {value:'Sweet & Simple Package',label:'Sweet & Simple Package - $448.00'},
        {value:'Just The Two of Us Package',label:'Just The Two of Us Package - $549.00'},
        {value:'I Love You Package',label:'I Love You Package - $595.00'},
        {value:'Bamboo & Stars Package',label:'Bamboo & Stars Package - $695.00'},
        {value:'Stars of Love I Package',label:'Stars of Love I Package - $950.00'},
        {value:'Stars of Love II Package',label:'Stars of Love II Package - $1,149.00'},
        {value:'Tiki Parasol Package',label:'Tiki Parasol Package - $998.00'},
        {value:'A Little More Package',label:'A Little More Package - Starting at $1,198.00'},
        {value:'Something Blue Stars Package',label:'Something Blue Stars Package - $1,988.00'},
        {value:'Bamboo Love II Package',label:'Bamboo Love II Package - $3,999.00'},
        {value:'Tropical Bliss Package',label:'Tropical Bliss Package - $6,500.00 + tax'}
      ];
      pkgSel.innerHTML='<option value="">Select a package...</option>';
      packages.forEach(p=>{ const o=document.createElement('option'); o.value=p.value; o.textContent=p.label; pkgSel.appendChild(o); });
    }

    // Beach list (hidden select gets these; overlay reads from it)
    const beachSel=document.getElementById('beach');
    if(beachSel){
      const beaches=[
        'Clearwater Beach','Sand Key Park','Honeymoon Island','Caladesi Island State Park','Belleair Beach',
        'Indian Rocks Beach','Indian Shores','Redington Beach','Madeira Beach','Treasure Island','Sunset Beach',
        'Pass-a-Grille Beach','St Pete Beach','Fort De Soto Park','Tampa Beach','Sarasota Beach','Anna Maria Island','Other (hotel/beach)'
      ];
      beachSel.innerHTML='';
      beaches.forEach(name=>{ const opt=document.createElement('option'); opt.value=name; opt.textContent=name; beachSel.appendChild(opt); });
      const note=document.getElementById('beach-note');
      if(note) note.textContent='Tap Select to choose one or more beaches.';
    }
  })();

  // Preferred Date(s) repeater
  (function(){
    const wrap=document.getElementById('dates-wrap');
    const btn=document.getElementById('add-date');
    if(!wrap || !btn) return;
    btn.addEventListener('click', ()=>{
      const input=document.createElement('input');
      input.type='date';
      input.name='preferred_dates[]';
      input.required=false;
      wrap.appendChild(input);
      input.focus();
    });
  })();

  // AJAX submit for FormSubmit
  (function(){
    const form=document.getElementById('contact-form');
    const messageDiv=document.getElementById('form-message');
    if(!form) return;

    function hasAtLeastOneDate(){
      const dates=[...form.querySelectorAll('input[name="preferred_dates[]"]')].map(i=>i.value.trim()).filter(Boolean);
      return dates.length>0;
    }
    function hasBeaches(){
      const sel=form.querySelector('#beach');
      return sel && Array.from(sel.selectedOptions).length>0;
    }

    form.addEventListener('submit', async (e)=>{
      e.preventDefault();
      messageDiv.textContent='';
      messageDiv.style.color='green';

      if(!hasAtLeastOneDate()){
        messageDiv.style.color='red';
        messageDiv.textContent='Please add at least one preferred date.';
        return;
      }
      if(!hasBeaches()){
        messageDiv.style.color='red';
        messageDiv.textContent='Please select at least one preferred beach location.';
        return;
      }
      if(!form.checkValidity()){
        messageDiv.style.color='red';
        messageDiv.textContent='Please fill out all required fields correctly.';
        form.reportValidity();
        return;
      }

      const actionUrl=form.getAttribute('action')||'';
      if(!/^https:\/\/formsubmit\.co\//i.test(actionUrl)){ form.submit(); return; }

      try{
        const fd=new FormData(form);
        const res=await fetch(actionUrl,{method:'POST',headers:{'Accept':'application/json'},body:fd});
        if(res.ok){
          messageDiv.style.color='green';
          messageDiv.textContent='Thank you! Your message has been sent.';
          form.reset();
          // refresh beach summary after reset
          window.VBTS_updateBeachSummary?.();
        }else{
          const data=await res.json().catch(()=> ({}));
          messageDiv.style.color='red';
          messageDiv.textContent=data?.message||'Something went wrong. Please try again later.';
        }
      }catch(err){
        messageDiv.style.color='red';
        messageDiv.textContent='Network error. Please try again.';
      }
    });
  })();

  // Obfuscated phone number for screen readers
  (function(){
    const el=document.getElementById('secure-phone'); if(!el) return;
    const p1=el.getAttribute('data-p1'); const p2=el.getAttribute('data-p2'); const p3=el.getAttribute('data-p3');
    const norm=(s)=>s.split('').reverse().join('');
    const pretty=`+1\u00A0${norm(p1)}\u2011${norm(p2)}\u2011${norm(p3)}`; // +1 727-312-6900
    el.textContent=pretty;
  })();

  // Scrape-resistant email and phone in footer
  (function(){
    // Email
    var u='contact', at='@', d1='vowsbythesea', d2='.com';
    var eSpan=document.getElementById('vbts-email');
    if(eSpan){
      var a=document.createElement('a');
      a.href='mailto:'+u+at+d1+d2;
      a.innerHTML=u+'&#8203;'+at+d1+d2;
      a.style.color='#ffcc66';
      eSpan.appendChild(a);
    }
    // Phone
    var p='+1 '+'727'+'\u2011'+'312'+'\u2011'+'6900';
    var tel='tel:'+'727'+'312'+'6900';
    var pSpan=document.getElementById('vbts-phone');
    if(pSpan){
      var b=document.createElement('a');
      b.href=tel; b.textContent=p; b.style.color='#ffcc66';
      pSpan.appendChild(b);
    }
  })();

  // ==== Beach Picker logic (overlay that does not push layout) ====
  (function(){
    const openBtn = document.getElementById('beach-picker-open');
    const overlay = document.getElementById('beach-overlay');
    const listWrap = document.getElementById('beach-options');
    const applyBtn = document.getElementById('beach-apply');
    const cancelBtn = document.getElementById('beach-cancel');
    const selectEl = document.getElementById('beach');
    const selectedText = document.getElementById('beach-selected');

    if(!openBtn || !overlay || !listWrap || !selectEl) return;

    // Build checkbox list from hidden select options
    function buildList(){
      listWrap.innerHTML = '';
      [...selectEl.options].forEach((opt, idx)=>{
        const id = 'beach-opt-' + idx;
        const row = document.createElement('label');
        row.className = 'vbts-option';
        row.htmlFor = id;
        const cb = document.createElement('input');
        cb.type = 'checkbox';
        cb.id = id;
        cb.value = opt.value;
        cb.checked = opt.selected;
        const span = document.createElement('span');
        span.textContent = opt.textContent;
        row.appendChild(cb);
        row.appendChild(span);
        listWrap.appendChild(row);
      });
    }

    // Update the visible summary text
    function updateSummary(){
      const values = [...selectEl.selectedOptions].map(o=>o.value);
      selectedText.textContent = values.length
        ? 'Selected: ' + values.join(', ')
        : 'No beaches selected yet.';
    }
    window.VBTS_updateBeachSummary = updateSummary;

    function openOverlay(){
      buildList();
      overlay.classList.add('open');
      document.body.classList.add('vbts-no-scroll');
      overlay.setAttribute('aria-hidden','false');
    }
    function closeOverlay(){
      overlay.classList.remove('open');
      document.body.classList.remove('vbts-no-scroll');
      overlay.setAttribute('aria-hidden','true');
    }

    function applySelection(){
      const checked = [...listWrap.querySelectorAll('input[type="checkbox"]')].filter(cb=>cb.checked).map(cb=>cb.value);
      // Sync to hidden select
      [...selectEl.options].forEach(o=>{ o.selected = checked.includes(o.value); });
      updateSummary();
      closeOverlay();
    }

    openBtn.addEventListener('click', openOverlay);
    applyBtn.addEventListener('click', applySelection);
    cancelBtn.addEventListener('click', closeOverlay);

    // Click outside the panel closes
    overlay.addEventListener('click', (e)=>{
      if(e.target === overlay) closeOverlay();
    });
    // ESC closes
    document.addEventListener('keydown', (e)=>{
      if(e.key === 'Escape' && overlay.classList.contains('open')) closeOverlay();
    });

    // Initialize summary on load
    updateSummary();
  })();
</script>

