<script>

/* Mobile menu + dropdown with hover-intent delay */
const nav=document.getElementById('site-nav');
const toggle=nav.querySelector('.menu-toggle');
const loc=nav.querySelector('.locations');
const dropBtn=nav.querySelector('.dropbtn');
let hideTimer=null;

toggle.addEventListener('click',()=>{
  const open=nav.classList.toggle('open');
  toggle.setAttribute('aria-expanded',String(open));
});
function openMenu(){clearTimeout(hideTimer);loc.classList.add('open');dropBtn.setAttribute('aria-expanded','true');}
function closeMenu(){hideTimer=setTimeout(()=>{loc.classList.remove('open');dropBtn.setAttribute('aria-expanded','false');},300);}
if(window.matchMedia('(min-width:881px)').matches){
  loc.addEventListener('mouseenter',openMenu);
  loc.addEventListener('mouseleave',closeMenu);
}
dropBtn.addEventListener('click',(e)=>{
  if(window.matchMedia('(max-width:880px)').matches){
    e.preventDefault();
    const isOpen=loc.classList.toggle('open');
    dropBtn.setAttribute('aria-expanded',String(isOpen));
  }
});
document.addEventListener('click',(e)=>{
  if(!loc.contains(e.target) && !dropBtn.contains(e.target) && window.matchMedia('(min-width:881px)').matches){
    loc.classList.remove('open');
    dropBtn.setAttribute('aria-expanded','false');
  }
});

/* Scrape-resistant email & phone (same as index) */
(function(){
  var u='contact', at='@', d1='vowsbythesea', d2='.com';
  var e=document.getElementById('vbts-email');
  if(e){var a=document.createElement('a');a.href='mailto:'+u+at+d1+d2;a.innerHTML=u+'&#8203;'+at+d1+d2;a.style.color='#d87600';e.appendChild(a);}
  var p='+1 '+'727'+'\u2011'+'312'+'\u2011'+'6900', tel='tel:'+'727'+'312'+'6900', ph=document.getElementById('vbts-phone');
  if(ph){var b=document.createElement('a');b.href=tel;b.textContent=p; b.style.color='#d87600'; ph.appendChild(b);}
})();

</script>

