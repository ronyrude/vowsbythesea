<style>
:root{--primary:#f28e1c;--dark:#0f1221;--ink:#222;--muted:#6b7280;--border:#ececec;--r:14px;--w:1100px;--ff:'Segoe UI',Tahoma,Arial,sans-serif}
*{box-sizing:border-box}html,body{margin:0}
body{font-family:var(--ff);color:var(--ink);background:#fff}
a{color:var(--primary);text-decoration:none}a:hover{text-decoration:underline}
.container{max-width:var(--w);margin:0 auto;padding:0 20px}

/* NAV */
nav{position:sticky;top:0;z-index:1000;background:linear-gradient(180deg,#111425 0%,#151937 100%);color:#fff;box-shadow:0 10px 30px rgba(0,0,0,.28)}
nav .bar{display:flex;align-items:center;justify-content:space-between;padding:12px 20px}
.brand{color:#fff;font-weight:900;letter-spacing:.2px}
.menu-toggle{display:none;background:rgba(255,255,255,.08);border:1px solid rgba(255,255,255,.15);color:#fff;border-radius:10px;padding:8px 12px}
.links{display:flex;align-items:center;gap:18px}
.links>a{color:#fff;font-weight:600;opacity:.98}
.links>a:hover{opacity:1}
.locations{position:relative}
.dropbtn{display:inline-flex;align-items:center;gap:6px;color:#fff;font-weight:700;padding:8px 10px;border-radius:10px;background:rgba(255,255,255,.07);border:1px solid rgba(255,255,255,.15)}
.dropbtn svg{width:14px;height:14px;opacity:.85}
.dropdown{position:absolute;top:44px;right:0;background:#fff;color:#111;min-width:340px;border-radius:14px;padding:14px;box-shadow:0 18px 50px rgba(0,0,0,.25);display:none}
.dropdown .group{padding:10px 0;border-top:1px solid #f0f0f0}
.dropdown .group:first-child{border-top:0;padding-top:0}
.dropdown h4{margin:.2em 0 .5em;font-size:.95rem;color:#111}
.dropdown a{display:block;color:#111;padding:7px 10px;border-radius:10px}
.dropdown a:hover{background:#f6f7fb}
.locations.open .dropdown{display:block}
/* hover handled by JS with leave-delay */

/* Mobile */
@media (max-width:880px){
  .menu-toggle{display:inline-block}
  .links{display:none;position:fixed;inset:56px 0 0 0;background:linear-gradient(180deg,#111425 0%,#151937 100%);padding:14px 20px;flex-direction:column;align-items:stretch;gap:10px}
  nav.open .links{display:flex}
  .dropdown{position:static;box-shadow:none;background:transparent;color:#fff;padding:0;display:block}
  .dropbtn{justify-content:space-between}
  .dropdown a{color:#fff}
  .dropdown a:hover{background:rgba(255,255,255,.08)}
  .dropdown .group{border-color:rgba(255,255,255,.18)}
  .dropdown h4{color:#fff;margin-top:8px}
}

/* Hero */
header.hero{color:#fff;text-align:center;padding:92px 20px;background:
 linear-gradient(180deg,rgba(17,20,37,.65),rgba(17,20,37,.65)),
 url('/images/hero-1920x1080-enhanced.jpg') center/cover no-repeat}
header.hero h1{margin:0 0 .25em;font-size:2.5rem}
